[
  {
    "name": "${name}",
    "image": "${image}",
    "essential": true,
    "memory": ${prometheus_memory},
    "command": [
      "--config.file=/etc/prometheus/prometheus.yaml",
      "--storage.tsdb.path=/prometheus/",
      "--web.enable-lifecycle",
      "--storage.tsdb.retention=24h"
    ],
    "links": [
      "alertmanager"
    ],
    "portMappings": [
      {
        "containerPort": ${prometheus_port},
        "hostPort": ${prometheus_port},
        "protocol": "tcp"
      }
    ],
    "mountPoints": [
        {
            "sourceVolume": "prometheus-storage",
            "containerPath": "/prometheus",
            "readOnly": false
        }
    ],
    "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
            "awslogs-group": "${awslogs_group}",
            "awslogs-region": "${region}",
            "awslogs-stream-prefix": "${name}"
        }
    }
  },
  {
    "name": "alertmanager",
    "image": "prom/alertmanager",
    "essential": true,
    "memory": ${alertmanager_memory},
    "portMappings": [
      {
        "containerPort": ${alertmanager_port},
        "hostPort": ${alertmanager_port},
        "protocol": "tcp"
      }
    ],
    "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
            "awslogs-group": "${awslogs_group}",
            "awslogs-region": "${region}",
            "awslogs-stream-prefix": "alertmanager"
        }
    }
  }
]
